/* pages/treatment/treatment.wxss */
@import "/style/weui.wxss";
/* 标签样式 */
.weui-label{
  font-size: 30rpx;
  font-weight: 500;
  width:120px;
  word-wrap:break-word;
  word-break:break-all
}
/* 输入框样式 */
.weui-input{
  padding-left: 10px;
  height: 5px;
  font-size: 35rpx;
}

.weui-cell__bd1{
  border:  1px solid rgb(176, 209, 206);
  border-radius: 5px;
  width: 40%;
  margin-left: -30px;
  margin-right: 40px;
  margin-top: 10px;
  margin-bottom: 10px;
}

.weui-cell_input{
  padding-top:0;
  padding-bottom:0;
}
/* 提交按钮样式 */
.btn{
  left: 0;
  right: 0;
  margin:0 auto;  
  color: #fff;
  background-color: #40E0D0; 
  font-size: 30rpx;
  width: 500rpx;
} 